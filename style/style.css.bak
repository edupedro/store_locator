body {
    font-family: Arial, Helvetica, sans-serif;
    margin: 0;
    padding: 0;
    position: relative;
}

#map{
    width: 100%;
    height: 100vh;
    position: relative;
    overflow: hidden;
}

.title{
    position: absolute;
    z-index: 100; 
    font-size: 68px;
    font-weight: bold;
    color: #333; 
    text-transform: uppercase;  
    top: 50px;
    left: 70px; 
}

.search-container{
    position: absolute;
    z-index: 100;
    top: 150px;
    left: 70px;
    width: 400px;
    height: 60px;
    background-color: #454E53;
    border-radius: 30px;
    display: flex;
}

.search-container .search{
    display: flex;
    flex-grow: 1;
    align-items: center;
    padding-left: 20px;
    padding-right: 20px;
}

.search-container input{
    width: 330px;
    font-size: 25px;
    background-color: transparent;
    border: none;
    color: #ffffff;    
}

.search-container input:focus{
    outline: none;
}

.search i {
    color: #ffffff;
    font-size: 25px;
}

.stores-list-container{
    padding-left: 20px;
    padding-right: 20px;

    width: 400px;
    position: absolute;
    z-index: 100;
    background-color: #ffffff;
    left: 70px;
    top: 230px;
    border-radius: 30px;
    bottom: 20px;
}

.store-container{
    padding-bottom: 15px;
    border-bottom: 1px solid #979797;
    width: 100%;    
} 

.store-address {
    color: #514C4C;
    font-size: 21px;
    margin-top: 30px;
}

.store-phone-number {
    color: #B5AdAd;
    margin-top: 15px;
    margin-bottom: 15px;
}